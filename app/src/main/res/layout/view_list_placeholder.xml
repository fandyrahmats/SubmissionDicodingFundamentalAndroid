            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
            <include layout="@layout/view_row_item_placeholder" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>